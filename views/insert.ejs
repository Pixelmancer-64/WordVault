<% layout('../layouts/boilerplate') %>

<form action="/word" id='main' method="POST" class='cool'>
    <label for="title">Title</label>
    <input type="text" name="word[title]" id="title" placeholder="Title">

    <label for="language">Language</label>
    <input type="text" name="word[language]" id="language" placeholder="Language" value='<%= lang[0] %> '>

    <label for="text">Text</label>
    <textarea name="word[text]" id="text"></textarea>

    <label for="category">Category</label>
    <input type="text" name="word[category]" id="category" placeholder="Category">

    <button>Add word</button>
</form>

<script src="/formValidation.js" async defer></script>